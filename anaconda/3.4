#%Module1.0#####################################################################
##
## Anaconda Scientific Python Distribution
##
proc ModulesHelp { } {
        global version

        puts stderr "\tLoad settings for Anaconda Scientific Python Distribution."
	puts stderr "\thttp://collaborate.bu.edu/engit/Grid/Python"
        puts stderr "\n\tVersion $version\n"
}

module-whatis	"Anaconda Scientific Python Distribution"

# for Tcl script use only
set     version      "2.0.1-py3.4"
set     ANACONDA     /ad/eng/opt/64/anaconda-2.0.1-py34

# Don't set PYTHONHOME or PYTHONLIB here; it'll throw off tools like pip when
# deciding where to put new files.  (Instead of auto-detecting correct paths at
# run-time, it'll use only the paths specified.)
prepend-path  PATH             $ANACONDA/bin/
prepend-path  MANPATH          $ANACONDA/share/man/
prepend-path  INCLUDE_PATH     $ANACONDA/include/
prepend-path  CPATH            $ANACONDA/include/python3.4m/
prepend-path  LIBRARY_PATH     $ANACONDA/lib/
prepend-path  LD_LIBRARY_PATH  $ANACONDA/lib/
# If we don't set the TCL library explicitly, we could end up with a mix of
# locally-installed TCL and Anaconda's TCL, which breaks the module command
# (and probably other things).
setenv        TCL_LIBRARY      $ANACONDA/lib/tcl8.5
