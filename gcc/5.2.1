#%Module1.0#####################################################################
##
## GNU Compiler Collection (C and C++)
##
proc ModulesHelp { } {
        global version

        puts stderr "\tGNU Compiler Collection (C and C++ only)"
	puts stderr "\thttp://gcc.gnu.org/"
        puts stderr "\n\tVersion $version\n"
}

module-whatis	"GNU Compiler Collection (C and C++ only)"

# for Tcl script use only
set     version      "5.2.1"
set     GCCDIR       /ad/eng/opt/64/gcc/gcc521

module load binutils
module load gmp
module load mpfr

prepend-path  PATH             "$GCCDIR/bin"
prepend-path  LIBRARY_PATH     "$GCCDIR/lib"
prepend-path  LD_LIBRARY_PATH  "$GCCDIR/lib"
prepend-path  CPATH            "$GCCDIR/include"
prepend-path  MANPATH          "$GCCDIR/share/man"
