#%Module1.0#####################################################################
##
## NLopt: Nonlinear Optimization Library
##
proc ModulesHelp { } {
        global version

        puts stderr "\tNLopt: Nonlinear Optimization Library"
        puts stderr "\thttp://ab-initio.mit.edu/wiki/index.php/NLopt"
        puts stderr "\n\tVersion: $version\n"
}

module-whatis   "Nonlinear Optimization Library"

module load anaconda/2.7
module load matlab/8.6

# for Tcl script use only
set     version    "2.4.2"
set     NLOPT_DIR  /ad/eng/opt/64/nlopt-$version

setenv        NLOPT_HOME       "$NLOPT_DIR"
prepend-path  LD_LIBRARY_PATH  "$NLOPT_DIR/lib"
prepend-path  LIBRARY_PATH     "$NLOPT_DIR/lib"
prepend-path  PKG_CONFIG_PATH  "$NLOPT_DIR/lib/pkgconfig"
prepend-path  PYTHONPATH       "$NLOPT_DIR/lib/python2.7/site-packages"
prepend-path  INCLUDE          "$NLOPT_DIR/include"
prepend-path  CPATH            "$NLOPT_DIR/include"
prepend-path  MANPATH          "$NLOPT_DIR/share/man"
prepend-path  MATLABPATH       "$NLOPT_DIR/matlab-plugins"
prepend-path  GUILE_LOAD_PATH  "$NLOPT_DIR/share/guile/site"
