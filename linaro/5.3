#%Module1.0#####################################################################
##
## Linaro Toolchain
##
proc ModulesHelp { } {
        global version

        puts stderr "\tLinaro Toolchain"
	puts stderr "\thttp://www.linaro.org/"
        puts stderr "\n\tVersion $version\n"
}

module-whatis	"Linaro Toolchain"

# for Tcl script use only
set     version      "5.3-2016.05"
set     LINARO_DIR   /ad/eng/opt/64/gcc-linaro-$version

# Newer versions of GCC tend to want newer binutils so we may as well use our
# custom version too
module load binutils
# Newer versions of various GNU numerical packages are required
module load mpfr
module load gmp
module load mpc

prepend-path  PATH             "$LINARO_DIR/bin"
prepend-path  LIBRARY_PATH     "$LINARO_DIR/lib"
prepend-path  LD_LIBRARY_PATH  "$LINARO_DIR/lib"
prepend-path  LIBRARY_PATH     "$LINARO_DIR/lib64"
prepend-path  LD_LIBRARY_PATH  "$LINARO_DIR/lib64"
prepend-path  CPATH            "$LINARO_DIR/include"
prepend-path  MANPATH          "$LINARO_DIR/share/man"
prepend-path  INFOPATH         "$LINARO_DIR/share/info"
